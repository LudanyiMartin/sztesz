<Window x:Class="sztesz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sztesz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBox x:Name="inputTextBox" Width="100" Margin="0,0,0,10" />
			<Button Content="Add" Width="100" Margin="0,0,0,10" Click="AddButton_Click" />
			<TextBlock x:Name="numbersTextBlock" TextAlignment="Center"/>
			<Button Content="Show Minimum" Width="100" Click="ShowMinimumButton_Click" />
			<Button Content="Show Maximum" Width="100" Click="ShowMaximumButton_Click" />
		</StackPanel>
	</Grid>
</Window>
